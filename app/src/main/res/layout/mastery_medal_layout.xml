<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/medalImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medaltriplekill"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/medalName"
        app:layout_constraintBottom_toTopOf="@+id/medalQty"
        app:layout_constraintStart_toEndOf="@+id/medalImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Triple" />

    <TextView
        android:id="@+id/medalQty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medalImage"
        app:layout_constraintTop_toBottomOf="@+id/medalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/roboto_medium"
        android:text="x222"
        android:textColor="#E6AF2C"
        android:textSize="12sp" />
</androidx.constraintlayout.widget.ConstraintLayout>