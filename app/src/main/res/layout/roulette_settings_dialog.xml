<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many times to roll."
        android:textColor="#FFF" />

    <EditText
        android:id="@+id/rouletteSettingsRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Default (50)"
        android:inputType="number"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delay between each roll (milliseconds)."
        android:textColor="#FFF" />

    <EditText
        android:id="@+id/rouletteSettingsDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Default (25ms)"
        android:inputType="number"
        android:textColor="#FFF"
        android:textSize="14sp" />

</LinearLayout>