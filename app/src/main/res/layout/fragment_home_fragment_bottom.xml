<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_light_background"
    android:orientation="vertical"
    tools:context=".HomeUpdatesFragment">

    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation" />

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:itemBackground="@color/md_white_1000"
        app:itemIconTint="@color/md_blue_700"
        app:itemTextColor="@color/material_drawer_primary_text"
        app:menu="@menu/home_bottom" />

</RelativeLayout>