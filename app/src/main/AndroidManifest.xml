<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.austinh.battlebuddy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:largeHeap="true"
        android:name="com.austinh.battlebuddy.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher"
        tools:ignore="GoogleAppIndexingWarning">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity android:name="com.austinh.battlebuddy.MainActivity">
        </activity>

        <activity android:name="com.austinh.battlebuddy.weapons.WeaponDetailsActivity" />

        <activity
            android:name="com.austinh.battlebuddy.loadout.LoadoutCreateMain"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.austinh.battlebuddy.damage_calculator.DamageCalcActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.austinh.battlebuddy.weapons.CompareWeaponActivity"
            android:theme="@style/CompareTheme" />

        <activity
            android:name="com.austinh.battlebuddy.weapons.CompareWeaponPicker"
            android:theme="@style/PickerTheme" />

        <activity
            android:name="com.austinh.battlebuddy.damage_calculator.DamageCalcPicker"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/grandmaster_noti" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name="com.austinh.battlebuddy.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.austinh.battlebuddy.info.TimerActivity" />

        <activity
            android:name="com.austinh.battlebuddy.weapons.WeaponDamageChart"
            android:theme="@style/AppTheme" />

        <service android:name="com.austinh.battlebuddy.info.TimerService" />

        <receiver android:name="com.austinh.battlebuddy.info.AlarmReceiver" />

        <activity android:name="com.austinh.battlebuddy.SocialLinksActivity" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <activity
            android:name="com.austinh.battlebuddy.stats.matchdetails.MatchDetailActivity"
            android:theme="@style/MatchDetailsTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.pubgbuddy.gg"
                    android:pathPrefix="/match"
                    android:scheme="http" />
                <data
                    android:host="www.pubgbuddy.gg"
                    android:pathPrefix="/match"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <!--<meta-data-->
            <!--android:name="io.fabric.ApiKey"-->
            <!--android:value="71fe4f6439eabeb63524778f52e28a9cbcd9e4c7" />-->

        <activity android:name="com.austinh.battlebuddy.stats.matchdetails.SinglePlayerStatsActivity" android:theme="@style/MatchDetailsTheme" />

        <activity android:name="com.austinh.battlebuddy.stats.matchdetails.KillFeedListMap"/>

        <activity android:name="com.austinh.battlebuddy.stats.MainStatsActivity" android:theme="@style/MainStatsTheme" />

        <!-- START NEW STUFF -->
        <activity
            android:name="com.austinh.battlebuddy.MainActivityKT"
            android:label="Battle Buddy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.austinh.battlebuddy.weapondetail.WeaponHome" android:theme="@style/WeaponHome">
        </activity>

        <activity android:name="com.austinh.battlebuddy.weapondetail.WeaponDetailTimeline" android:theme="@style/WeaponTimeline" />

        <activity android:name="com.austinh.battlebuddy.premium.UpgradeActivity" android:theme="@style/WeaponTimeline" />

        <activity android:label="Map Drop Roulette" android:name="com.austinh.battlebuddy.map.MapDropRouletteActivity" android:theme="@style/DropRoulette" />

        <activity
            android:name="com.austinh.battlebuddy.stats.PlayerListDialog"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.austinh.battlebuddy.AlertManager"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.austinh.battlebuddy.stats.main.StatsHome"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.austinh.battlebuddy.SettingsActivity"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.austinh.battlebuddy.profile.ProfileMain"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.austinh.battlebuddy.profile.ProfilePicPicker"
            android:theme="@style/PlayerListDialog" />

        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="com.mopub.common.MoPubBrowser"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="com.mopub.mobileads.MraidVideoPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="com.mopub.mobileads.RewardedMraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2318893623894354~7961010686" />
    </application>

</manifest>