<resources>
    <declare-styleable name="ArcProgressStackView">
        <attr name="apsv_animated" format="boolean"/>
        <attr name="apsv_shadowed" format="boolean"/>
        <attr name="apsv_rounded" format="boolean"/>
        <attr name="apsv_dragged" format="boolean"/>
        <attr name="apsv_leveled" format="boolean"/>

        <attr name="apsv_typeface" format="string"/>
        <attr name="apsv_text_color" format="color"/>

        <attr name="apsv_shadow_distance" format="dimension"/>
        <attr name="apsv_shadow_angle" format="integer"/>
        <attr name="apsv_shadow_radius" format="dimension"/>
        <attr name="apsv_shadow_color" format="color"/>

        <attr name="apsv_animation_duration" format="integer"/>
        <attr name="apsv_interpolator" format="reference"/>

        <attr name="apsv_draw_width" format="fraction|dimension"/>
        <attr name="apsv_model_offset" format="dimension"/>
        <attr name="apsv_model_bg_enabled" format="boolean"/>

        <attr name="apsv_start_angle" format="integer"/>
        <attr name="apsv_sweep_angle" format="integer"/>
        <attr name="apsv_indicator_orientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>

        <attr name="apsv_preview_colors" format="reference"/>
        <attr name="apsv_preview_bg" format="color"/>
    </declare-styleable>
</resources>